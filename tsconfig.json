{
    "compilerOptions": {
        "target": "ES2020",
        "outDir": "dist",
        "module": "commonjs",
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "removeComments": false,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "**/*.fixture.ts",
        "**/*.spec.ts",
        "**/test_utils/**/*"
    ]
}
